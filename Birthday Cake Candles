#include <iostream>
using namespace std;
int main()
{
    int n=0,max=0,a=0;
    cin>>n;
    int arr[n];
    for (int i=0; i<n; i++)
     {
     cin>>arr[i];
     if(max<arr[i])
     {
         max=arr[i];
     }
    
    }
    for(int i=0;i<n;i++)
    {
        if(max==arr[i])
    {
        a++;
    }
    }
    
    cout<<a;
    
    return 0;
}

#include <iostream>
#include<iomanip>
using namespace std;
int main()
{
    int n=0;
    float b=0,a=0,c=0;
    double d=0,e=0,f=0;
    
    cin>>n;
    int arr[n];
    for(int i=0;i<n;i++)
    {
        cin>>arr[i];
    }
    for(int i=0;i<n;i++)
    {
       if(arr[i]>0)
       {
           a++;
       }
       if(arr[i]<0)
       {
           b++;
       }
       if(arr[i]==0)
       {
           c++;
       }
    }
    d=a/n;
    e=b/n;
    f=c/n;
    cout<<fixed<<setprecision(6)<<d<<endl;
    cout<<fixed<<setprecision(6)<<e<<endl;
    cout<<fixed<<setprecision(6)<<f<<endl;

    
    
    
    return 0;
}
